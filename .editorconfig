root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,json,css,scss}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[{package.json,composer.json}]
indent_size = 2

